<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/aar_item_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="#757575"
        android:scaleType="centerCrop"
        android:src="@drawable/food_1" />

    <TextView
        android:id="@+id/aar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/aar_item_image"
        android:maxLines="1"
        android:text="Title11111111111111234"
        android:paddingLeft="8dp"
        android:maxLength="20"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/aar_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/aar_item_image"
        android:layout_below="@id/aar_title"
        android:maxLines="1"
        android:text="Drilling Topic"
        android:paddingLeft="8dp"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/aar_recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/aar_item_image"
        android:layout_below="@id/aar_category_name"
        android:maxLines="3"
        android:text="Recommendations: This is another line of text. This is another line of text This is another line of text. This is another line of text."
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/up_vote_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votes:"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/up_votes"
        android:layout_toStartOf="@+id/up_votes"
        />

    <TextView
        android:id="@+id/up_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="###"
        android:paddingLeft="8dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>